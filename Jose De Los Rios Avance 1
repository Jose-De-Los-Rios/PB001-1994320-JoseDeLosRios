#include<iostream>
using namespace std;

int main() 
{
	int opcion;
	int numcit;
	int menu = 1;
	char nombre[30];
	char descripcion[100];
	float precio;
	float preciou;
	float TOTAL;
	char tratamiento[30];
	int agendar = 1;
	float hra;
	int cant;
	//MENU

	do 
	{
		cout << "\t\tMENU" << endl;
		cout << "Escriba el numero dependiendo de lo que usted requiera\n";

		cout << "1--> Agendar cita\n";
		cout << "2--> Modificar cita\n";
		cout << "3--> Eliminar cita\n";
		cout << "4--> Lista de citas vigentes\n";
		cout << "5--> Limpiar pantalla\n";
		cout << "6--> Salir\n";

		cin >> opcion;

		switch (opcion) 
		{

		case 1://Agendar Cita
			agendar = 1;
			while (agendar == 1) 
			{
				cout << "Escriba su nombre completo" << endl;
				cin >> nombre;
				cin.getline(nombre, 500);
				cout << "Numero de cita" << endl;
				cin >> numcit;
				cout << "Hora del tratamiento (Formato 24hrs, separar por punto ejemplo: 23.32)" << endl;
				cin >> hra;
				cout << "Selecccione el tratamiento que solicita" << endl;
				cin >> tratamiento;
				cin.getline(tratamiento, 500);
				cout << "Descripcion" << endl;
				cin >> descripcion;
				cin.getline(descripcion, 500);
				cout << "Precio unitario del tratamiento" << endl;
				cin >> precio;
				cout << "Cantidad del tratamiento (cantidad de sesiones)" << endl;
				cin >> cant;
				cout << "Precio unitario por sesion" << endl;
				cin >> preciou;
				cout << "TOTAL:" << endl;
				TOTAL = (preciou * cant) + precio;
				cout << TOTAL << endl;

				cout << "Desea agendar otra cita?\n1-si\n2-no" << endl;
				cin >> agendar;
				if (agendar == 2) 
				{
					cout << "Desea volver al menu?\n1-si\n2-no" << endl;
					cin >> menu;
				}
			}
		break;

		case 2: cout << "aun no definido" << endl;
			break;

		case 3:cout << "aun no definido" << endl;
			break;

		case 4: cout << "aun no definido" << endl;
			break;

		case 5: cout << "aun no definido" << endl;
			break;

		case 6: menu = 2;
			break;

		default: cout << "Respuesta no valida" << endl;
			cout << "Desea volver al menu?\n1-si\n2-no" << endl;
			cin >> menu;
		}
	} 
	while (menu == 1);
}
